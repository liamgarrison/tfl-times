{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "require-atomic-updates": "off",
    "no-prototype-builtins": "off",
    "space-before-function-paren": 1,
    "space-before-blocks": 1,
    "key-spacing": ["error", { "mode": "strict" }],
    "keyword-spacing": 1,
    "prefer-template": 1,
    "indent": [
      "error",
      2,
      { "MemberExpression": 0 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
